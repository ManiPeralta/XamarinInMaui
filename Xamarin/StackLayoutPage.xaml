<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Xamarin.StackLayoutPage"
             Title="StackLayoutPage">

    <StackLayout Margin="20" BackgroundColor="LightBlue" VerticalOptions="Center" HorizontalOptions="Center"
                 Orientation="Horizontal" Padding="10,5,30,0" Spacing="10">
        <Button Text="Button 1"/>
        <Button Text="Button 2"/>
        <Button Text="Button 3"/>
        <StackLayout BackgroundColor="LightCoral">
            <Button Text="Button 4"/>
            <Button Text="Button 5"/>
        </StackLayout>
    </StackLayout>

